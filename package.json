{
  "private": true,
  "scripts": {
    "start": "run-pty % npm run watch % npm run firefox % npm run chrome",
    "firefox": "sucrase-node scripts/wait-for-manifest.ts && npm run web-ext -- run",
    "chrome": "npm run firefox -- --target chromium",
    "compile": "npm run rollup -- --config",
    "watch": "npm run compile -- --watch",
    "build:chrome": "cross-env BROWSER=chrome run-s compile build-clean \"web-ext -- build\" build-post",
    "build:firefox": "cross-env BROWSER=firefox run-s compile build-clean \"web-ext -- build\" \"web-ext -- lint\" build-post",
    "build-clean": "sucrase-node scripts/build-clean.ts",
    "build-post": "sucrase-node scripts/build-post.ts",
    "png-icons": "sucrase-node scripts/png-icons.ts",
    "rollup": "sucrase-node node_modules/.bin/rollup",
    "web-ext": "sucrase-node node_modules/.bin/web-ext",
    "tsc": "tsc",
    "eslint": "eslint . --fix",
    "eslint:check": "eslint . --report-unused-disable-directives",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "run-s eslint:check prettier:check tsc build:chrome build:firefox"
  },
  "dependencies": {
    "n-ary-huffman": "4.0.0",
    "preact": "10.5.13",
    "preact-shadow-root": "1.0.2",
    "tiny-decoders": "5.0.0",
    "webextension-polyfill": "0.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-replace": "2.4.2",
    "@rollup/plugin-sucrase": "3.1.0",
    "@types/cross-spawn": "6.0.2",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "cross-env": "7.0.3",
    "cross-spawn": "7.0.3",
    "crx3": "1.1.3",
    "eslint": "7.25.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "flow-bin": "0.121.0",
    "fs-extra": "9.1.0",
    "js-tokens": "7.0.0",
    "minifycss": "1.0.1",
    "npm-run-all": "4.1.5",
    "optional-require": "1.0.3",
    "preact-render-to-string": "5.1.19",
    "prettier": "2.2.1",
    "readdirp": "3.6.0",
    "rollup": "2.45.2",
    "rollup-plugin-prettier": "2.1.0",
    "run-pty": "2.3.1",
    "typescript": "4.2.4",
    "web-ext": "6.1.0",
    "yazl": "2.5.1"
  }
}
