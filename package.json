{
  "private": true,
  "scripts": {
    "start": "run-pty % npm run watch % npm run firefox % npm run chrome",
    "firefox": "sucrase-node scripts/wait-for-manifest.js && npm run web-ext -- run",
    "chrome": "npm run firefox -- --target chromium",
    "compile": "npm run rollup -- --config",
    "watch": "npm run compile -- --watch",
    "build:chrome": "cross-env BROWSER=chrome run-s compile build-clean \"web-ext -- build\" build-post",
    "build:firefox": "cross-env BROWSER=firefox run-s compile build-clean \"web-ext -- build\" \"web-ext -- lint\" build-post",
    "build-clean": "sucrase-node scripts/build-clean.js",
    "build-post": "sucrase-node scripts/build-post.js",
    "png-icons": "sucrase-node scripts/png-icons.js",
    "rollup": "sucrase-node node_modules/.bin/rollup",
    "web-ext": "sucrase-node node_modules/.bin/web-ext",
    "flow": "flow",
    "flow:check": "flow check",
    "eslint": "eslint . --fix",
    "eslint:check": "eslint .",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "run-s eslint:check prettier:check flow:check build:chrome build:firefox"
  },
  "dependencies": {
    "n-ary-huffman": "4.0.0",
    "preact": "10.4.5",
    "preact-shadow-root": "1.0.2",
    "tiny-decoders": "5.0.0",
    "webextension-polyfill": "0.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-node-resolve": "8.1.0",
    "@rollup/plugin-replace": "2.3.3",
    "@rollup/plugin-sucrase": "3.1.0",
    "babel-eslint": "10.1.0",
    "cross-env": "7.0.2",
    "cross-spawn": "7.0.3",
    "crx3": "1.1.2",
    "eslint": "7.4.0",
    "eslint-config-lydell": "14.0.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.5",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "flow-bin": "0.121.0",
    "fs-extra": "9.0.1",
    "js-tokens": "6.0.0",
    "minifycss": "1.0.1",
    "npm-run-all": "4.1.5",
    "optional-require": "1.0.0",
    "preact-render-to-string": "5.1.9",
    "prettier": "2.0.5",
    "readdirp": "3.4.0",
    "rollup": "2.19.0",
    "rollup-plugin-prettier": "2.1.0",
    "run-pty": "1.0.1",
    "web-ext": "4.3.0",
    "yazl": "2.5.1"
  }
}
